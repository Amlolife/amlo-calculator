  <div class="container">
    <h1>Generator Daftar Foto Pernikahan</h1>
    <form>
      <label for="customShot">Tambahkan Foto Kustom:</label>
      <input type="text" id="customShot" placeholder="Misalnya: Foto keluarga besar">

      <button type="button" onclick="addCustomShot()">Tambahkan Foto</button>

      <h2>Daftar Foto Pernikahan</h2>
      <ul class="shot-list">
        <li><input type="checkbox" id="ceremony"> <label for="ceremony">Upacara Pernikahan</label></li>
        <li><input type="checkbox" id="familyPhotos"> <label for="familyPhotos">Foto Keluarga</label></li>
        <li><input type="checkbox" id="reception"> <label for="reception">Pesta Resepsi</label></li>
        <li><input type="checkbox" id="brideGroomPortrait"> <label for="brideGroomPortrait">Foto Pengantin</label></li>
